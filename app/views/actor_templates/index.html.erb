<h1>
  List of all actors
</h1>

<hr>

<form action="/insert_actor_record" method="post">
  <div>
  <label for="title_field">Name</label>
  <input type="text" name="name" id="title_field">
  </div>
  <div>
  <label for="year_field">Dob</label>
  <input type="text" name="dob" id="year_field">
  </div>
  <div>
  <label for="duration_field">Bio</label>
  <input type="text" name="bio" id="duration_field">
  </div>
  <div>
  <label for="desc_field">Image</label>
  <input type="text" name="image" id="desc_field">
  </div>

<button>Create actor</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director_record" method="post">
  <div>
  <label for="title_field">Name</label>
  <input type="text" name="name" id="title_field">
  </div>
  <div>
  <label for="year_field">Dob</label>
  <input type="text" name="dob" id="year_field">
  </div>
  <div>
  <label for="duration_field">Bio</label>
  <input type="text" name="bio" id="duration_field">
  </div>
  <div>
  <label for="desc_field">Image</label>
  <input type="text" name="image" id="desc_field">
  </div>

<button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
